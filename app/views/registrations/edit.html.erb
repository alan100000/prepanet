<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
	<%carrera=Major.find(current_user.major_id)%>

   <p><%= f.label :materia_1 %><br />
  		<%= f.select("materia_1", Course.where(:area_id=>carrera.area_1||carrera.area_2||carrera.area_3||carrera.area_4||carrera.area_5).collect{|c| [c.nombre, c.id]})%>
   </p>
   
   <p><%= f.label :materia_2 %><br />
  		<%= f.select("materia_2", Course.where(:area_id=>carrera.area_1||carrera.area_2||carrera.area_3||carrera.area_4||carrera.area_5).collect{|c| [c.nombre, c.id]})%>
   </p>
   
   <p><%= f.label :materia_3 %><br />
  		<%= f.select("materia_3", Course.where(:area_id=>carrera.area_1||carrera.area_2||carrera.area_3||carrera.area_4||carrera.area_5).collect{|c| [c.nombre, c.id]})%>
   </p>

  <p><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password %></p>

  <p><%= f.submit "Actualizar" %></p>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

<%= link_to "Back", :back %>
