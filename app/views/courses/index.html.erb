<% @courses.each do |course| %>
  <tr>
    <td><%= course.nombre %></td>
    <td><%= link_to 'Mostrar', course %></td>
    <td><%= link_to 'Editar', edit_course_path(course) %></td>
    <td><%= link_to 'Destruir', course, :confirm => 'Estas seguro(a)?', :method => :delete %></td>
  </tr>
<% end %>
</table>

